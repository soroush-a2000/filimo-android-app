<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/primary_text"
        android:id="@+id/image_view_item_source_type_play"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_view_item_source_type_image"
                android:tint="@color/white"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_mp4_file"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:padding="6dp"
                android:gravity="center|start"
                android:orientation="vertical"
                android:layout_marginEnd="55dp"
                android:layout_marginStart="55dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/text_view_item_source_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="لینک MP4"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sans"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_view_item_source_source"
                    android:textSize="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="https://www.domain.com/video.mp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:tint="@color/white"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_file_download2"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
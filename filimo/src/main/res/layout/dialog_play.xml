<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_radius_dark"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_layout_comment_back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="start">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_play" />

                    <TextView
                        android:id="@+id/text_view_comment_dialog_count1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="متد پخش"
                        android:fontFamily="@font/yekan"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_view_comment_dialog_close1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:tint="@color/colorAccent"
                    app:srcCompat="@drawable/ic_arrow_down" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="135dp">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:fontFamily="@font/yekan"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="5dp"
                    android:text="برای پخش فیلم مورد نظر خود میتوانید از پخش کننده های دیگر استفاده کنید که قابلیت های بیشتری را در اختیار شما قرار می دهند."

                    android:textSize="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/text1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pishf"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/downloadll"
                            android:drawableStart="@drawable/ic_play_button_arrowhead2"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:fontFamily="@font/yekan"
                            android:textColor="@color/white"
                            android:layout_below="@+id/text1"
                            android:text="پخش پیش فرض"

                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/mxplayer"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_button_support_bg"
                            android:drawableStart="@drawable/play_circle"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:layout_toLeftOf="@+id/pishf"
                            android:padding="8dp"
                            android:fontFamily="@font/yekan"
                            android:textColor="@color/white"
                            android:layout_below="@+id/text1"
                            android:text="پخش با MX Player"

                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/vlcplayer"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_button_support_bg"
                            android:drawableStart="@drawable/vlc"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:fontFamily="@font/yekan"
                            android:textColor="@color/white"
                            android:layout_toLeftOf="@+id/pishf"
                            android:padding="8dp"
                            android:layout_below="@+id/text1"
                            android:text="پخش با VLC"

                            android:textSize="12sp" />
                    </LinearLayout>
                </HorizontalScrollView>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_item_channel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:outlineAmbientShadowColor="@color/gray"
        android:outlineSpotShadowColor="@color/gray"

        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        tools:ignore="UnusedAttribute">


        <ImageView
            android:id="@+id/image_view_item_channel"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/place_holder_channel" />
        <RelativeLayout
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/rounded_rect"
            android:layout_marginTop="-26dp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="bottom"
            android:id="@+id/polie"
            android:backgroundTint="@color/red">

            <ImageView
                android:id="@+id/lockfilm"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_4sdp"
                android:layout_margin="1dp"
                android:visibility="visible"
                android:tint="@color/white"
                app:srcCompat="@drawable/lockfilm" />

            <ImageView
                android:id="@+id/lockoper"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_4sdp"
                android:layout_margin="1dp"
                android:visibility="visible"
                android:tint="@color/white"
                app:srcCompat="@drawable/padlock" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_view_item_channel"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="4dp"
        android:layout_gravity="center"
        android:fontFamily="@font/yekan"
        android:textSize="13sp" />


</LinearLayout>






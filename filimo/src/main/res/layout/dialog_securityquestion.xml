<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_40sdp"
    android:background="@drawable/shape_dialog">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سوال امنیتی"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/_16ssp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/yekan" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="پایتخت ایران کدام شهر است؟"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/yekan" />

        <EditText
            android:id="@+id/ed_tehran"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:background="@drawable/shape_ed_dialog"
            android:hint="اینجا بنویسید تهران"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/yekan"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_btn_intro"
                android:text="تایید"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/yekan"
                android:layout_marginBottom="20dp"
                />
            <ProgressBar
                android:layout_width="40dp"
                android:id="@+id/progress"
                android:layout_marginTop="40dp"
                android:layout_height="40dp"
                android:outlineAmbientShadowColor="@color/white"
                android:outlineSpotShadowColor="@color/white"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
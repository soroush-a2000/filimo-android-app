<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp"
            android:id="@+id/card_view_item_slide_one"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="470dp">

            <ImageView
                android:id="@+id/image_view_item_slide_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="@drawable/fragment_shadows" />


            <TextView
                android:id="@+id/text_view_item_slide_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/white"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="90dp"
                android:padding="8dp"
                android:text="قوانین و مقررات"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_gradient"
                android:drawableStart="@drawable/ic_play"
                android:drawableTint="#fff"
                android:drawablePadding="1dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="50dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="اطلاعات بیشتر"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</LinearLayout>
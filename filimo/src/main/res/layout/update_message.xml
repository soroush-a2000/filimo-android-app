<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:id="@+id/update_text_view_title"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textColor="@color/gray"
        android:fontFamily="@font/vazir"
        android:text="نسخه جدیدی از اپلیکیشن در دسترس است لطفا آن را بروزرسانی نمایید "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/update_text_view_updates"
        android:textSize="14dp"
        android:textColor="#027402"
        android:fontFamily="@font/vazir"
        android:text="* Bugs fixed \n* Share Button added\n* Other one \n* New One \n* new Frature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>